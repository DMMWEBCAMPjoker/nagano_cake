<h3><%= @customer.last_name %><%= @customer.first_name %>さんの詳細ページ</h3>

<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %>&nbsp;&nbsp;<%= @customer.first_name %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= @customer.last_name_kana %>&nbsp;<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postcode %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
      <% if @customer.is_deleted == true %>
        <td class="text-secondary">退会済み</td>
      <% else %>
        <td class="text-success">有効</td>
      <% end %>
  </tr>

</table>

<%= link_to "編集する",  admin_customer_edit_path(@customer.id) %>