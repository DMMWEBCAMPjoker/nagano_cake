<div class="container">
  <div class="col-sm-10">
    <h4 class="table-active" style="width:35%">注文履歴詳細</h4>
  </div>
  <%= form_with model: @order, url: admin_orders_update_path, method: :patch do |f| %>
  <table class="table table-borderless">
    <tr><th>購入者</th>
    <td><%#= link_to admin_customer_path(@order.customer), do %>
      <%= @order.customer.last_name + @order.customer.first_name %>
    <%# end %></td></tr>
    <tr><th>注文日</th>
    <td><%= @order.created_at.strftime("%Y/%m/%d ") %></td></tr>
    <tr><th>配送先</th>
    <td>〒<%= @order.delivery_postcode %> 
    <%= @order.delivery_address %><br>
    <%= @order.delivery_name %></td></tr>
    <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
    <tr><th>注文ステータス</th>
    <td><%#= f.select :status[["入金待ち","waiting_payment"],
                            ["入金確認","paymet_confirmation"],
                            ["製作中","in_production"],
                            ["発送準備中","preparing_delivery"],
                            ["発送済み","delivered"]] %>
        <%= f.select :status, Order.statuses_i18n.invert, selected: @order.status %>
        <%= f.submit "更新", class: 'btn btn-success' %>
    </td></tr>
  </table>
  <% end %>
    <div class="row">
      <div class="col-sm-8">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="table-active">商品名</th>
              <th class="table-active">単価(税込)</th>
              <th class="table-active">数量</th>
              <th class="table-active">小計</th>
              <th class="table-active">製作ステータス</th>
            </tr>
          </thead>
        <% @order.order_items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.item.name %></td>
              <td><%= item.tax_item_price.to_s(:delimited) %></td>
              <td><%= item.quantity %></td>
              <td><%= item.subtotal.to_s(:delimited) %>円</td>
              <td>
                <%= form_with model: item, url: admin_orders_path, method: :patch do |f| %>
                  <%= f.hidden_field :status, { :value => [["着手不可","no_production"],
                                                          ["製作待ち","waiting_production"],
                                                          ["製作中","in_production"],
                                                          ["製作完了","completion_production"]].to_h } %>
                  <%= f.hidden_field :order_id ,:value => @order.id %>
                  <%= f.submit "更新",class: 'btn btn-success' %>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
      <div class="col-sm-4">
        <table class="table table-borderless">
          <tr>
            <th>商品合計</th><td><%= @total.to_s(:delimited) %>円</td>
          </tr>
          <tr><th>送料</th><td><%= @order.postage.to_s(:delimited) %>円</td></tr>
          <tr><th>請求金額合計</th><td><%= @order.invoice.to_s(:delimited) %>円</td></tr>
        </table>
    </div>
  </div>
</div>