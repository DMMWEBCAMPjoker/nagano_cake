<h2>注文履歴一覧</h2>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= link_to admin_order_path(order_id) do %>
          <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
      </td>
      <td><%= order.customer.last_name %><%=order.customer.first_name %></td>
      <td><% @sum = 0 %>
            <% order.order_items.all.each do |order_item| %>
             <% @quantity = order_item.quantity %>
             <% sum += @quantity %>
            <% end %>
            <%= sum %>
      </td>
      <td><%= order.status %></td>
    </tr>
  <% end %>
  </tbody>
</table>