<h3>商品編集</h3>

      <%= form_with model: @item, url: admin_item_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label :商品画像 %>
        <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name, class: "form-control-file" %>

      <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.text_area :description, class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
        <!-- プルダウンメニュー -->
      </div>

      <div class="form-group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price, class: "form-control" %>円
      </div>

      <div class="form-group">
        <%= f.label :販売ステータス %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "販売中", {value: :false, style: "display: inline-block;"} %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_active, "販売停止中", {value: :true, style: "display: inline-block;"} %>
      </div>

      <div class="form-group">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
      <% end %>