      <h3>商品一覧</h3>

      <table class="table table-hover table-inverse">

        <thead class="thrad-light">

          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

<% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_show_path(item) %></td>
             <td>¥<%= (item.price).to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td></td>
            <!-- 販売ステータス -->
            <td>
              <% if item.is_deleted == false %>
              <span>販売中</span>
              <% else %>
              <span>販売停止中</span>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
