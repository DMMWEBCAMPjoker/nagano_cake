      <h3>商品新規登録</h3>

      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label :商品画像 %>
        <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name, class: "form-control-file", placeholder: "商品名" %>
      </div>

      <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.text_area :description, class: "form-control-file", placeholder: "ここに説明文を記述します" %>
      </div>

      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
        <!-- プルダウンメニュー -->
      </div>

      <div class="form-group">
        <%= f.label :税抜価格 %>
        <%= f.text_field :price, class: "form-control", placeholder: "1000" %>円
      </div>

      <div class="form-group">
        <%= f.label :販売ステータス %>
        <%= form_with model: @item do |f| %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "販売中", {value: :false, style: "display: inline-block;"} %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_active, "販売停止中", {value: :true, style: "display: inline-block;"} %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
      <% end %>
