<div class="container">
  <div class="row">
    <h4 class="col-lg-auto bg-light text-center">商品新規登録</h4>
  </div>

  <div class="row justify-content-lg-center">
    <div class="col-lg-10">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

    <form>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">商品画像</label>
        <div class="col-sm-8">
        <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">商品名</label>
        <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control-file", placeholder: "商品名" %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">商品説明</label>
        <div class="col-sm-8">
        <%= f.text_area :description, class: "form-control-file", placeholder: "ここに説明文を記述します" %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">ジャンル</label>
        <div class="col-sm-8">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name),  { include_blank: "--選択してください--" }, class: "form-control" %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">税抜価格</label>
        <div class="col-sm-8">
        <div class="form-check form-check-inline">
        <%= f.text_field :price, class: "form-control", placeholder: "1000" %>円
        </div>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">販売ステータス</label>
        <div class="col-sm-8">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "販売中", {value: :false, style: "display: inline-block;"} %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_active, "販売停止中", {value: :true, style: "display: inline-block;"} %>
      </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </form>
    </div>
  </div>
      <% end %>
</div>