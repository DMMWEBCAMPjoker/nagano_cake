<div class="container">
  <div class="row">
    <h4 class="col-lg-auto bg-light text-center">商品詳細</h4>
  </div>

  <div class="row">
    <div class="col-md-3 d-flex justify-content-center align-items-center">
      <%= image_tag @item.get_item_image(200, 200) %>
    </div>

  <div class='col-md-8 offset-md-1'>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td><%= (@item.add_tax_price).to_s(:delimited) %> (<%= (@item.price).to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <% if @item.is_deleted == false %>
          <td><strong class="text-success">販売中</strong></td>
          <% else %>
          <td><strong class="text-danger">販売停止中</strong></td>
          <% end %>
        </tr>
        <tr>
          <td>
            <div class="form-group row justify-content-center">
              <%= link_to '編集する', admin_item_edit_path(@item), class: "btn btn-success" %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>
</div>