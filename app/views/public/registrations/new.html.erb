<div class="container">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <table class="table table-borderless">
      <%= render "public/shared/error_messages", resource: resource %>
      <h3 class="bg-light">新規登録</h3>
       <tr>
         <td>名前</td>
         <%#= 名前(漢字） %>
         <td><%= f.label :"(姓)" %>
         <%= f.text_field :last_name %>
         <%= f.label :"(名)" %>
         <%= f.text_field :first_name %></td>
       </tr>
       <tr>
         <td>フリガナ</td>
         <%#= 名前(カナ） %>
         <td><%= f.label :"(セイ)" %>
         <%= f.text_field :last_name_kana %>
         <%= f.label :"(メイ)" %>
         <%= f.text_field :first_name_kana %></td>
       </tr>

       <tr>
         <%#= メールアドレス %>
         <td>メールアドレス</td>
         <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
       </tr>
       <tr>
         <%#= 郵便番号 %>
         <td>郵便番号</td>
         <td><%= f.text_field :postcode %></td>
       </tr>
       <tr>
         <%#= 住所 %>
         <td>住所</td>
         <td><%= f.text_field :address, :size=>"60" %></td>
       </tr>
       <tr>
         <%#= 電話番号 %>
         <td>電話番号</td>
         <td><%= f.text_field :telephone_number %></td>
       </tr>
       <tr>
         <%#= パスワード %>
         <td>パスワード<% if @minimum_password_length %>
             (<%= @minimum_password_length %> 文字以上)
           <% end %>
         </td>
         <td><%= f.password_field :password, autocomplete: "new-password" %></td>
       </tr>
       <tr>
         <%#= パスワード確認用 %>
         <td>パスワード(確認用)</td>
         <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
       </tr>
       <tr>
         <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
       </tr>
    </table>
    <% end %>
    <div class="container col-xs-6 col-xs-offset-2 sign-up-message">
      <h3>既に登録済みの方</h3>
    <div class="row">
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
    </div>
    </div>
  </div>
</div>







