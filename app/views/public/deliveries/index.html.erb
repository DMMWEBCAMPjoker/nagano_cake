<div class="container">
  <div class="row">
    <h3 class="bg-light">配送先登録一覧</h3>
     <table class="table table-borderless">
       <%= form_for(@delivery, url: deliveries_index_path) do |f| %>
       <tr>
         <td>郵便番号(ハイフンなし)</td>
         <td><%= f.text_field :postcode %></td>
       </tr>
       <tr>
         <td>住所</td>
         <td><%= f.text_field :address %></td>
       </tr>
       <tr>
         <td>宛名</td>
         <td><%= f.text_field :name %></td>
         <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
       </tr>
       <% end %>
      </table class>
      <table class="table table-bordered">
        <thead>
          <tr class="bg-light">
            <td>郵便番号</td>
            <td>住所</td>
            <td>宛名</td>
            <td></td>
            <td></td>
          </tr>
        </thead>
          <% @deliveries.each do |delivery| %>
        <tbody>
          <tr>
            <td><%= delivery.postcode %></td>
            <td><%= delivery.address %></td>
            <td><%= delivery.name %></td>
            <td><%= link_to "編集する", deliveries_edit_path(delivery.id), class:"btn btn-success" %></td>
            <td><%= link_to '削除する', deliveries_destroy_path(delivery.id), method: :delete, class:"btn btn-danger" %></td>
          </tr>
        </tbody>
          <% end %>
      </table>
  </div>
</div>

