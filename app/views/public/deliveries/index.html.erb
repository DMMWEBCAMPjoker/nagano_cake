<h1>配送先登録一覧</h1>

<%= form_for(@delivery, url: deliveries_index_path) do |f| %>
<table>
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :postcode %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.submit '新規登録' %></td>
  </tr>

</table>

<% end %>

<table>
  <thead>
    <tr>
    <td>郵便番号</td>
    <td>住所</td>
    <td>宛名</td>
  </tr>
  </thead>
  <% @deliveries.each do |delivery| %>
  <tbody>
    <tr>
    <td><%= delivery.postcode %></td>
    <td><%= delivery.address %></td>
    <td><%= delivery.name %></td>
    <td><%= link_to "編集する", deliveries_edit_path(delivery.id) %></td>
    <td><%= link_to '削除する', deliveries_destroy_path(delivery.id), method: :delete %></td>
  </tr>
  </tbody>
  <% end %>
</table>
