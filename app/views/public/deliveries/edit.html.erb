<h2>配送先編集</h2>

 <%= form_with model: @delivery, url: deliveries_update_path, method: :patch do |f| %>
  <table>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postcode %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>名前</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.submit "変更内容を保存" %></td>
    </tr>
  </table>


 <% end %>