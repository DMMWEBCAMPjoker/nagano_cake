<div class="container">
  <div class="row">
      <div class="pull-left">
        <h3 class="bg-light">マイページ</h3>
        <br>
        <div class="form-check form-check-inline">
        <h3 class="bg-light"><strong>登録情報</strong></h3> &emsp;&emsp;&emsp;<%= link_to "編集する", customers_infomation_edit_path, class:"btn btn-success" %>
        </div>
          <table class="table col-sl-9">
            <tr>
              <td class="bg-light">氏名</td>
              <td><%= @customer.last_name %>&nbsp;&nbsp;<%= @customer.first_name %></td>
            </tr>
            <tr>
              <td class="bg-light">カナ</td>
              <td><%= @customer.last_name_kana %>&nbsp;&nbsp;<%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td class="bg-light">郵便番号</td>
              <td><%= @customer.postcode %></td>
            </tr>
            <tr>
              <td class="bg-light">住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td class="bg-light">電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td class="bg-light">メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </table>
          <h3><配送先 <%= link_to "一覧を見る", deliveries_index_path %></h3>
        </div>
      </div>
    </div>
