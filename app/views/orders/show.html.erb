<h3>注文履歴詳細</h3>
<p>注文情報</p>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.created_at.strftime("%Y/%m/%d ") %></td>
      <td>〒<%= @order.delivery_postcode %><br>
          <%= @order.delivery_address %><br>
          <%= @order.delivery_name %></td>
      <td><%= @order.payment_method %></td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

<p>注文内容</p>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
   <% @order.order_items.each do |order_item| %>
  <tbody>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= order_item.item.price %></td>
      <td><%= order_item.quantity %></td>
      <td><%= (order_item.price * 1.1 *order_item.quantity).floor.to_s(:delimited) %>
        <% @total_price = @sum += (order_item.price * 1.1 *order_item.quantity).floor.to_s(:delimited) %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<p>請求情報</p>
<table>
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @total_price %></td>
      <td><%= @order.postage %></td>
      <td><%= @order.invoice - @order.postage %></td>
    </tr>
  </tbody>
</table>