<h3>注文情報入力</h3>
  <h3>支払方法</h3>
  <%= form_with model: @order, url: check_path, method: :post do |f| %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
    <br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(2) %>
    <%= f.label :payment_method_tarnsfer, Order.payment_methods_i18n[:transfer] %>
  <% end %>
  <h3>お届け先</h3>
  <%= form_with model: @order, url: check_path, method: :post do |f| %>
    <%= f.radio_button :address_number, 1 %>
    <%= f.label :address_number_1, "ご自身の住所" %>
    <br><%= current_customer.address %>
    <br>
    <%= f.radio_button :address_number, 2 %>
    <%= f.label :address_number_2, "登録済住所から選択" %><br>
    <%= f.select :delivery_id, options_from_collection_for_select(current_customer.deliveries, :id, :address_was) %>
    <br>
    <%= f.radio_button :address_number, 3 %>
    <%= f.label :address_number_3, "新しいお届け先" %>
    <br>
      <%= f.label :delivery_postcode, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :delivery_postcode, autofocus: true, autocomplete: "postcode" %>
    <br>
      <%= f.label :delivery_address, "住所" %>
      <%= f.text_area :delivery_address, autofocus: true, autocomplete: "address" %>
    <br>
      <%= f.label :delivery_name, "宛名" %>
      <%= f.text_field :delivery_name %>
    <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
  <% end %>