<h3>注文情報確認</h3>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.add_tax_price %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= cart_item.subtotal %></td>
      <% @sum += cart_item.subtotal %>
    </tr>
  </tbody>
  <% end %>
</table>
<h3>支払方法</h3>
  <%= @order.payment_method_i18n %>
<h3>お届け先</h3>
  〒<%= @order.delivery_postcode %>
  <%= @order.delivery_address %>
  <%= @order.delivery_name %>

<table>
  <thead>
    <tr>
      <th>送料</th>
      <th>商品合計</th>
      <th>請求金額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.postage %></td>
      <td><%= @sum %></td>
      <td><%= @sum += @order.postage %></td>
    </tr>
  </tbody>
</table>

<%= form_with model: @order,  url: complete_path, method: :post do |f| %>
  <%= f.hidden_field :delivery_postcode, :value => @order.delivery_postcode %>
  <%= f.hidden_field :delivery_address, :value => @order.delivery_address %>
  <%= f.hidden_field :delivery_name, :value => @order.delivery_name %>
  <%= f.hidden_field :postage, :value => @order.postage %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :invoice, :value => @sum + @order.postage %>
<%= f.submit "注文を確定する", class:"btn btn-success" %>
<% end %>