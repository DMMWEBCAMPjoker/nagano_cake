<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.delivery_address %><br>
        <%= order.delivery_name %>
      </td>
      <td><% order.order_items.each do |order_item| %>
        <%= order_item.item.name %>
        <% end %>
      </td>
      <td><%= order.invoice - order.postage %>円</td>
      <td><%= link_to "表示する", order_path(order.id), class:"btn btn-primary" %></td>
    </tr>
  </tbody>
  <% end %>
</table>