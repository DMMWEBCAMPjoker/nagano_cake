<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <th>
        <tr>
          <% if customer_signed_in? %>
            <td><%= link_to "LOGO", root_path %></td>
            <td><%= link_to "マイページ", customers_my_page_path %></td>
            <td><%= link_to "商品一覧", items_path %></td>
            <td><%= link_to "カート", cart_items_path %></td>
            <td><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></td>
          <% elsif admin_signed_in? %>
            <td><%= link_to "LOGO", root_path %></td>
            <td><%= link_to "商品一覧", admin_item_index_path %></td>
            <td><%= link_to "会員一覧", admin_customers_path %></td>
            <td><%= link_to "ジャンル一覧",  admin_genres_path %></td>
            <td><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></td>
          <% else %>
            <td><%= link_to "LOGO", root_path %></td>
            <td><%= link_to "新規登録", new_customer_registration_path %></td>
            <td><%= link_to "ログイン", choose_path %></td>
          <% end %>
        </tr>
      </th>
    </header>
    <%= yield %>
  </body>
</html>
